<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:background="#fff"
                android:focusableInTouchMode="true"
                android:layout_width="match_parent"
              android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/rl_user"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:id="@+id/iv_user_head"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/deal_logo"/>
        <TextView
            android:id="@+id/tv_user_name"
            android:layout_toRightOf="@+id/iv_user_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="用户名"
            android:textSize="14sp"
            android:textColor="#a000"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp">
            <TextView
                android:id="@+id/tv_rmb_c"
                android:text="￥"
                android:textSize="14sp"
                android:textColor="#aaff0000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_toRightOf="@+id/tv_rmb_c"
                android:id="@+id/tv_price_c"
                android:text="998"
                android:textSize="16sp"
                android:textColor="#aaff0000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <Button
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:text="苏州市"
            android:textSize="13sp"
            android:background="@android:color/transparent"
            android:drawableRight="@drawable/local_s"
            android:textColor="#6000"
            android:layout_marginLeft="10dp"
            android:layout_alignBottom="@+id/iv_user_head"
            android:layout_toRightOf="@+id/iv_user_head"
            android:id="@+id/btn_local"/>
    </RelativeLayout>
    <ImageView
        android:id="@+id/iv_line_c"
        android:layout_below="@id/rl_user"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="#ccc"/>

    <TextView
        android:layout_margin="10dp"
        android:id="@+id/tv_cd"
        android:layout_below="@id/rl_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#a000"
        android:text="        这里是商品简介这里是商品简介这里是商品简介这里是商品简介这里是商品简介--------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------"/>

    <!--<ImageView-->
        <!--android:layout_below="@+id/tv_cd"-->
        <!--android:id="@+id/iv_shadow_cd"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="0.1dp"-->
        <!--android:background="#ccc"/>-->

    <RelativeLayout
        android:id="@+id/rl_local"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_cd"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="12dp"
        android:layout_marginTop="12dp">
        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="2016-10-18"
            android:textSize="12sp"
            android:textColor="#a000"/>
        <LinearLayout
            android:id="@+id/ll_local"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="浏览  "
                android:textSize="12sp"
                android:textColor="#a000"/>
            <TextView
                android:id="@+id/tv_browse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100"
                android:textSize="12sp"
                android:textColor="#a000"/>
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>
