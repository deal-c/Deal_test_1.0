<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants">


    <RelativeLayout
        android:id="@+id/rl_adaw"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/dizhi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收货地址:"
            android:textColor="#a000"
            android:textSize="14sp"/>

    <TextView
        android:layout_toRightOf="@+id/dizhi"
        android:id="@+id/tv_main_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="哈哈哈哈哈哈哈哈哈"
        android:textSize="14sp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="90dp"
        android:textColor="#a000"
        android:singleLine="false"/>
        <TextView
            android:id="@+id/yonghu"
            android:layout_below="@+id/tv_main_address"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收货人:"
            android:textColor="#a000"
            android:textSize="14sp"/>

    <TextView
        android:id="@+id/tv_nickname"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/yonghu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_main_address"
        android:text="用户昵称"
        android:textColor="#a000"
        android:layout_below="@id/tv_main_address"
        android:textSize="14sp"/>

        <TextView
            android:id="@+id/dianhua"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/yonghu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="电话:"
            android:textColor="#a000"
            android:textSize="14sp"/>

    <TextView
        android:id="@+id/tv_phone_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/dianhua"
        android:layout_alignLeft="@+id/tv_main_address"
        android:text="用户电话"
        android:textSize="14sp"
        android:textColor="#a000"
        android:layout_below="@+id/yonghu"
      />

    <!--<TextView-->
        <!--android:id="@+id/tv_morenAddress"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="已设为默认地址"-->
        <!--android:textSize="14sp"-->
        <!--android:textColor="#000"-->
        <!--android:visibility="gone"-->
        <!--android:layout_toRightOf="@id/tv_phone_num"-->
        <!--android:layout_alignBottom="@id/tv_phone_num"-->
        <!--android:layout_marginLeft="10dp"/>-->

    <CheckBox
        android:id="@+id/cb_is_moren"
        android:layout_centerVertical="true"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:text="设为默认"
        android:textColor="#a000"
        android:textSize="12sp"
        android:button="@drawable/ismoren"
        android:layout_alignParentRight="true"
        android:layout_marginRight="6dp"

        />

    </RelativeLayout>

    <View
        android:id="@+id/viewview"
        android:layout_width="match_parent"
        android:layout_below="@+id/rl_adaw"
        android:layout_height="1px"
        android:background="#C0C5C7"/>

</RelativeLayout>
