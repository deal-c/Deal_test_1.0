<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="7dip">

    <TextView
        android:id="@+id/tv_main_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="哈哈哈哈哈哈哈哈哈"
        android:textSize="22sp"
        android:textColor="#000"
        android:singleLine="false"/>

    <TextView
        android:id="@+id/tv_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="用户昵称"
        android:textColor="#000"
        android:layout_below="@id/tv_main_address"
        android:textSize="22sp"/>

    <TextView
        android:id="@+id/tv_phone_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="用户电话"
        android:textSize="22sp"
        android:textColor="#000"
        android:layout_toRightOf="@id/tv_nickname"
        android:layout_alignBottom="@id/tv_nickname"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:id="@+id/tv_morenAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="已设为默认地址"
        android:textSize="14sp"
        android:textColor="#000"
        android:visibility="gone"
        android:layout_toRightOf="@id/tv_phone_num"
        android:layout_alignBottom="@id/tv_phone_num"
        android:layout_marginLeft="10dp"/>


</RelativeLayout>
