<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#fff"
    >
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_modify_tx"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/main">


            <ImageView
                android:id="@+id/iv_modify_tx_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:src="@drawable/comego"

                android:gravity="left"
                android:layout_centerVertical="true"
                />

            <TextView
                android:id="@+id/tv_modify_tx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="修改头像"
                android:textSize="18sp"
                android:textColor="#fff"


                android:layout_gravity="center_horizontal"



                />
            <TextView
                android:id="@+id/tv_keep_tx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="保存"
                android:textSize="16sp"
                android:textColor="#fff"


                android:layout_gravity="right"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                />


    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar_modify_tx"
        android:padding="20dp">
    <ImageView
        android:id="@+id/iv_tx_camora"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:scaleType="centerCrop"
        android:src="@drawable/camora"/>
    </RelativeLayout>

</RelativeLayout>
