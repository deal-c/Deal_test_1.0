<?xml version="1.0" encoding="utf-8"?>



<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp"
    android:background="#eee">

    <RelativeLayout
        android:id="@+id/rl_reg_tx"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <ImageView
            android:id="@+id/iv_tx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/u88"
            android:layout_centerInParent="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:paddingLeft="20dp"
        android:id="@+id/rl_reg_user"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="#eee">

        <ImageView
            android:id="@+id/tv_reg_username"
            android:layout_width="24dp"
            android:layout_height="24dp"
           android:src="@drawable/yonghu"
            android:layout_marginLeft="20dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"/>
        <EditText
            android:id="@+id/et_reguser"
            android:hint="请输入用户名"
            android:padding="4dp"
            android:layout_toRightOf="@+id/tv_reg_username"
            android:textColorHint="#3000"
            android:textSize="14sp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:textColor="#a000"
            android:layout_width="240dp"
            android:layout_height="40dp"
            android:background="@drawable/edittext"
            />
    </RelativeLayout>
    <RelativeLayout
        android:paddingLeft="20dp"
        android:id="@+id/rl_reg_password"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="#eee">

        <ImageView
            android:id="@+id/tv_reg_password"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/mima"
            android:layout_marginLeft="20dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"/>
        <EditText
            android:id="@+id/et_regPsd"
            android:hint="请输入密码"
            android:padding="4dp"
            android:layout_toRightOf="@+id/tv_reg_password"
            android:textColorHint="#3000"
            android:textSize="14sp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:textColor="#a000"
            android:layout_width="240dp"
            android:layout_height="40dp"
            android:background="@drawable/edittext"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_reg_sex"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:background="#eee">
        <RadioGroup
            android:id="@+id/rg_sex"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <RadioButton
                android:id="@+id/rb_male"
                android:layout_width="60dp"
                android:layout_height="20dp"
                android:text="男"
                android:textColor="#a000"
                android:textSize="16sp"
                />
            <RadioButton
                android:layout_marginLeft="20dp"
                android:id="@+id/rb_female"
                android:layout_width="60dp"
                android:layout_height="20dp"
                android:textSize="16sp"
                android:textColor="#a000"
                android:text="女"/>
        </RadioGroup>
    </RelativeLayout>


    <RelativeLayout
        android:paddingLeft="20dp"
        android:id="@+id/rl_reg_birthday"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="#eee">

        <ImageView
            android:id="@+id/tv_reg_birthday"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/birthday"
            android:layout_marginLeft="20dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/tv_birthday"
            android:hint="请输入生日"
            android:gravity="center_vertical"
            android:padding="4dp"
            android:layout_toRightOf="@+id/tv_reg_birthday"
            android:textColorHint="#3000"
            android:textSize="14sp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:textColor="#a000"
            android:layout_width="240dp"
            android:layout_height="40dp"
            android:background="@drawable/edittext"
            />

    </RelativeLayout>

    <RelativeLayout
        android:paddingLeft="20dp"
        android:id="@+id/rl_reg_oftenplace"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="#eee">

        <ImageView
            android:id="@+id/tv_reg_oftenplace"
            android:layout_width="24dp"
            android:layout_height="24dp"
           android:src="@drawable/dizhi"
            android:layout_marginLeft="20dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"/>
        <EditText
            android:id="@+id/et_oftenplace"
            android:padding="4dp"
            android:hint="请输入常居地(例如:苏州)"
            android:layout_toRightOf="@+id/tv_reg_oftenplace"
            android:textColorHint="#3000"
            android:textSize="14sp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:textColor="#a000"
            android:layout_width="240dp"
            android:layout_height="40dp"
            android:background="@drawable/edittext"
            />
    </RelativeLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">
        <Button
            android:layout_marginTop="10dp"
            android:id="@+id/btn_commit"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:background="@drawable/shapes"
            android:textSize="20sp"
            android:text="提 交"
            android:textColor="#fff"
            android:layout_centerInParent="true"

            />
    </RelativeLayout>
</LinearLayout>
