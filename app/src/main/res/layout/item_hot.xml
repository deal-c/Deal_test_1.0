<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:layout_marginTop="20dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">
    <RelativeLayout
        android:id="@+id/rl_commodity"
        android:layout_below="@+id/rl_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/background"
        android:padding="15dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        >
        <RelativeLayout
            android:id="@+id/ll_seller"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_head_buy"
                android:layout_centerVertical="true"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/deal_logo"/>
            <TextView
                android:id="@+id/tv_name_buy"
                android:layout_toRightOf="@+id/iv_head_buy"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="张三"
                android:textColor="#a000"
                android:textSize="12sp"/>
        </RelativeLayout>
        <ImageView
            android:layout_below="@+id/ll_seller"
            android:id="@+id/iv_line_s"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:background="#ddd"/>
        <RelativeLayout
            android:id="@+id/rl_commodity_buy"
            android:layout_below="@+id/iv_line_s"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_cg_l"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/deal_logo"/>
            <TextView
                android:id="@+id/tv_cg_l"
                android:text="这是商品标题"
                android:layout_toRightOf="@+id/iv_cg_l"
                android:layout_alignTop="@+id/iv_cg_l"
                android:layout_marginLeft="10dp"
                android:textSize="12sp"
                android:textColor="#a000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_rmb_l"
                android:layout_toRightOf="@+id/iv_cg_l"
                android:layout_alignBottom="@+id/iv_cg_l"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="5dp"
                android:text="￥"
                android:textSize="12sp"
                android:textColor="#ae44"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"/>
            <TextView
                android:id="@+id/tv_price_l"
                android:layout_toRightOf="@+id/tv_rmb_l"
                android:layout_alignBottom="@+id/iv_cg_l"
                android:layout_marginBottom="5dp"
                android:text="998"
                android:textSize="14sp"
                android:textColor="#ae44"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"/>
            <TextView
                android:id="@+id/tv_local_l"
                android:layout_alignBottom="@+id/iv_cg_l"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:text="苏州 吴中区"
                android:textSize="12sp"
                android:textColor="#4000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"/>
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>