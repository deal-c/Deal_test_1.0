<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <ImageView
            android:id="@+id/communityimg"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:scaleType="centerCrop"
            android:src="@drawable/ad3" />

    <RelativeLayout
       android:background="@drawable/whybb"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="13dp"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/communityimg"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
           android:id="@+id/namecom"
           android:layout_marginLeft="10dp"
           android:layout_marginTop="12dp"
           android:layout_toRightOf="@+id/logo"

           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="社区名字 "/>

        <ImageView
            android:id="@+id/logo"
            android:layout_marginLeft="11dp"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher"
            android:layout_marginStart="8dp"
            android:layout_alignTop="@+id/namecom"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:text="社区描述"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/namecom"
            android:layout_alignLeft="@+id/namecom"
            android:layout_alignStart="@+id/namecom"
            android:id="@+id/comdesc" />
        <Button
            android:layout_alignBottom="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:text="关注"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

</RelativeLayout>
