<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <ImageView
        android:id="@+id/btn_shadow1"
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="#ccc"/>
    <ImageView
        android:id="@+id/iv_shadow"
        android:layout_below="@+id/btn_shadow1"
        android:background="#eee"
        android:layout_width="match_parent"
        android:layout_height="20dp"/>
    <TextView
        android:id="@+id/tv_pl"
        android:layout_below="@id/iv_shadow"
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#a000"
        android:textSize="16sp"
        android:text="热门评论(0)"/>
    <ImageView
        android:id="@+id/iv_line_p"
        android:background="#ccc"
        android:layout_below="@id/tv_pl"
        android:layout_width="match_parent"
        android:layout_height="0.8dp"/>
    <TextView
        android:id="@+id/tv_plnr"
        android:layout_below="@id/iv_line_p"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:textSize="14sp"
        android:textColor="#6000"
        android:gravity="center"
        android:text="还没有人评论..."/>
    <ImageView
        android:id="@+id/btn_shadow2"
        android:layout_below="@+id/tv_plnr"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="#ccc"/>
    <ImageView
        android:id="@+id/iv_shadow2"
        android:layout_below="@+id/btn_shadow2"
        android:background="#eee"
        android:layout_width="match_parent"
        android:layout_height="20dp"/>
    <TextView
        android:layout_below="@id/iv_shadow2"
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#a000"
        android:textSize="16sp"
        android:text="猜你喜欢"/>
</RelativeLayout>
