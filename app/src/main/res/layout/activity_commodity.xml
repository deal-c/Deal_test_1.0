<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context="com.first.yuliang.deal_community.CommodityActivity">
    <include android:id="@+id/tl_community"
             layout="@layout/commodity_bar"/>
    <Button
        android:id="@+id/btn_bar_shadow"
        android:layout_below="@+id/tl_community"
        android:background="#bbb"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"/>
    <ListView
        android:layout_marginBottom="50dp"
        android:layout_below="@id/btn_bar_shadow"
        android:id="@+id/lv_commodity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </ListView>

    <RelativeLayout
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <ImageView
            android:id="@+id/iv_line_b"
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:background="#ccc"/>
        <Button
            android:id="@+id/ib_ly"
            android:layout_below="@id/iv_line_b"
            android:layout_width="60dp"
            android:layout_height="49dp"
            android:background="@android:color/transparent"
            android:text="评论"
            android:textSize="9sp"
            android:textColor="#33d685"
            android:gravity="center"
            android:drawableTop="@drawable/ly"/>
        <Button
            android:id="@+id/ib_sc"
            android:layout_toRightOf="@+id/ib_ly"
            android:layout_width="60dp"
            android:layout_height="49dp"
            android:background="@android:color/transparent"
            android:text="收藏"
            android:textSize="9sp"
            android:textColor="#33d685"
            android:gravity="center"
            android:drawableTop="@drawable/sc"/>
        <Button
            android:layout_below="@+id/iv_line_b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="我想要"
            android:background="@color/main"
            android:textColor="#fff"/>
    </RelativeLayout>
</RelativeLayout>
