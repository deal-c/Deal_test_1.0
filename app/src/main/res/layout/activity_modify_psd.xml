<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_modify_psd"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/main"

        >


            <ImageView
                android:id="@+id/iv_modify_psd_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:background="@drawable/ripple_bg"
                android:src="@drawable/return_"

                android:layout_centerVertical="true"
                android:gravity="left"/>

            <TextView
                android:id="@+id/tv_modify_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="修改密码"
                android:textSize="18sp"
                android:textColor="#fff"
                android:layout_gravity="center_horizontal"






                />


    </android.support.v7.widget.Toolbar>

    <Button
        android:id="@+id/iv_line1"
        android:layout_below="@id/toolbar_modify_psd"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="#bbb"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_line1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#eee"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dip"
               >

                <TextView
                    android:id="@+id/tv_new_psd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:text="新密码"
                    android:layout_centerVertical="true"
                    android:textColor="#a000"
                    android:layout_alignParentLeft="true"/>

               <EditText
                   android:id="@+id/et_new_psd"
                   android:layout_width="match_parent"
                   android:layout_height="35dp"
                   android:layout_centerVertical="true"
                   android:padding="4dp"
                    android:textColor="#000"
                   android:layout_marginLeft="80dp"
                   android:background="@drawable/edittext"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_height="1px"
                android:background="#C0C5C7"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dip"
                >

                <TextView
                    android:id="@+id/tv_again_confirm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:text="再次输入"
                    android:layout_centerVertical="true"
                    android:textColor="#a000"
                    android:layout_alignParentLeft="true"/>

                <EditText
                    android:id="@+id/et_again_confirm"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginLeft="80dp"
                    android:padding="4dp"
                    android:layout_centerVertical="true"
                    android:textColor="#000"
                    android:background="@drawable/edittext"
                    />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_height="1px"
                android:background="#C0C5C7"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:padding="10dp">

            <Button
                android:id="@+id/btn_queren"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:background="@drawable/shapegray"
                android:textSize="16sp"
                android:textColor="#fff"
                android:text="确 定"/>

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
