<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_modify_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/main">


        <ImageView
            android:id="@+id/iv_modify_name_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:src="@drawable/return_"
            android:background="@drawable/ripple_bg"
            android:gravity="left"
            android:layout_centerVertical="true"
            />

        <TextView
            android:id="@+id/tv_modify_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="修改昵称"
            android:textSize="18sp"
            android:textColor="#fff"


            android:layout_gravity="center_horizontal"



            />
            <TextView
                android:id="@+id/tv_keep_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="保存"
                android:textSize="16sp"
                android:textColor="#fff"
                android:background="@drawable/ripple_bg"
                android:layout_gravity="right"

                android:layout_centerVertical="true"

                android:layout_marginRight="15dp"
                />


    </android.support.v7.widget.Toolbar>

    <Button
        android:id="@+id/iv_line1"
        android:layout_below="@id/toolbar_modify_name"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="#bbb"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_line1"
        android:padding="5dp"
        android:layout_marginTop="10dp"
        android:background="#eee">

        <TextView
            android:id="@+id/tv_nicheng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="输入昵称"
            android:textSize="14sp"
            android:padding="5dip"
            android:textColor="#a000"
            android:layout_marginLeft="10dp"
            />
        <EditText
            android:id="@+id/et_nicheng"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_toRightOf="@id/tv_nicheng"
            android:layout_alignBottom="@id/tv_nicheng"
            android:padding="4dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:textColor="#a000"
            android:textSize="14sp"
            android:singleLine="true"
            android:background="@drawable/edittext"/>

        <ImageView
            android:id="@+id/iv_remove"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/x"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"/>


    </RelativeLayout>


</RelativeLayout>
