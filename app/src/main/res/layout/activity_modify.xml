<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">
    <android.support.v7.widget.Toolbar
        android:id="@+id/tool_myinfomation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">
            <ImageView
                android:id="@+id/iv_modify_main_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:src="@drawable/backback"

                android:layout_centerVertical="true"
                android:gravity="left"/>

            <TextView
                android:id="@+id/tv_my_infomation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="个人信息"
                android:textSize="26sp"
                android:textColor="#fff"


                android:layout_centerInParent="true"


                android:gravity="center"

                />

        </RelativeLayout>
    </android.support.v7.widget.Toolbar>


    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tool_myinfomation">


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/rl_modify_tx"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:padding="10dp"
           >

            <ImageView
                android:id="@+id/iv_modify_tx"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="centerCrop"
               android:layout_centerVertical="true"
                android:src="@drawable/u88"
                android:layout_marginLeft="10dp"
              />

            <ImageView
                android:id="@+id/iv_modify_go"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/gg"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_height="1px"
            android:background="#C0C5C7"/>

        <RelativeLayout
            android:id="@+id/rl_modify_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:padding="10dp">

            <TextView
                android:id="@+id/tv_modify_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="昵称"
                android:textSize="24sp"
                android:textColor="#808080"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"/>

            <ImageView
                android:id="@+id/iv_modify_go1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/gg"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/tv_show_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/iv_modify_go1"
                android:text="hh"
                android:textColor="#808080"
                android:layout_centerVertical="true"
                android:textSize="18sp"/>
        </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_height="1px"
                android:background="#C0C5C7"/>

            <RelativeLayout
                android:id="@+id/rl_modify_psd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:padding="10dp">

                <TextView
                    android:id="@+id/tv_modify_psd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="密码"
                    android:textSize="24sp"
                    android:textColor="#808080"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"/>

                <ImageView
                    android:id="@+id/iv_modify_go9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/gg"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:id="@+id/tv_show_psd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/iv_modify_go9"
                    android:text="修改"
                    android:textColor="#065279"
                    android:layout_centerVertical="true"
                    android:textSize="18sp"/>
            </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_height="1px"
            android:background="#C0C5C7"/>

        <RelativeLayout
            android:id="@+id/rl_modify_gender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:padding="10dp">

            <TextView
                android:id="@+id/tv_modify_gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="性别"
                android:textSize="24sp"
                android:textColor="#808080"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"/>

            <ImageView
                android:id="@+id/iv_modify_go2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/gg"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/tv_show_gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/iv_modify_go2"
                android:text="hh"
                android:textColor="#808080"
                android:layout_centerVertical="true"
                android:textSize="18sp"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_height="1px"
            android:background="#C0C5C7"/>

        <RelativeLayout
            android:id="@+id/rl_modify_birthday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:padding="10dp">

            <TextView
                android:id="@+id/tv_modify_birthday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="生日"
                android:textSize="24sp"
                android:textColor="#808080"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"/>

            <ImageView
                android:id="@+id/iv_modify_go3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/gg"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/tv_show_birthday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/iv_modify_go3"

                android:textColor="#808080"
                android:layout_centerVertical="true"
                android:textSize="18sp"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_height="1px"
            android:background="#C0C5C7"/>


        <RelativeLayout
            android:id="@+id/rl_modify_oftenlive"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:padding="10dp">

            <TextView
                android:id="@+id/tv_modify_oftenlive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="常居地"
                android:textSize="24sp"
                android:textColor="#808080"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"/>

            <ImageView
                android:id="@+id/iv_modify_go5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/gg"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/tv_show_oftenlive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/iv_modify_go5"
                android:text="hh"
                android:textColor="#808080"
                android:layout_centerVertical="true"
                android:textSize="18sp"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_height="1px"
            android:background="#C0C5C7"/>



        <RelativeLayout
            android:id="@+id/rl_modify_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:padding="10dp">

            <TextView
                android:id="@+id/tv_modify_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="收货地址"
                android:textSize="24sp"
                android:textColor="#808080"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"/>

            <ImageView
                android:id="@+id/iv_modify_go6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/gg"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/tv_show_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/iv_modify_go6"
                android:text="修改/添加"
                android:textColor="#065279"
                android:layout_centerVertical="true"
                android:textSize="18sp"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20px"
            android:background="#C0C5C7">

        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的等级"
                android:textSize="24sp"
                android:textColor="#808080"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"/>

            <ImageView
                android:id="@+id/iv_modify_go7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/gg"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_height="1px"
            android:background="#C0C5C7"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="会员身份"
                android:textSize="24sp"
                android:textColor="#808080"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"/>

            <ImageView
                android:id="@+id/iv_modify_go8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/gg"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_height="1px"
                android:background="#C0C5C7"/>
            <RelativeLayout
                android:id="@+id/rl_back_account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="10dp"
               >

                <Button
                    android:id="@+id/btn_back_account"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="退出当前账号"
                    android:textSize="24sp"
                    android:textColor="#808080"
                     android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/shapegray"/>
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                >

            </RelativeLayout>
        </LinearLayout>






    </ScrollView>


</RelativeLayout>