<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#fff">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_modify_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:src="@drawable/backback"

                android:layout_centerVertical="true"
                android:gravity="left"/>

            <TextView
                android:id="@+id/tv_modify_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="添加新地址"
                android:textSize="24sp"
                android:textColor="#fff"


                android:layout_centerInParent="true"



                />
            <TextView
                android:id="@+id/tv_address_keep"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="保存"
                android:textSize="20sp"
                android:textColor="#fff"

                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                />

        </RelativeLayout>
    </android.support.v7.widget.Toolbar>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/reciver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dip"
        android:background="#fff">

        <TextView
            android:id="@+id/tv_reciver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收货人"
            android:textSize="20sp"
            android:textColor="#000"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"/>

        <EditText
            android:id="@+id/et_reciver"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_toRightOf="@id/tv_reciver"

            android:textColor="#000"
            android:layout_marginLeft="20dp"
            android:background="@drawable/mv_loading_logo"

           />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_height="1px"
        android:background="#C0C5C7"/>

    <RelativeLayout
        android:id="@+id/contactPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dip"
        android:background="#fff">

        <TextView
            android:id="@+id/tv_contactPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="联系电话"
            android:textSize="20sp"
            android:textColor="#000"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"/>

        <EditText
            android:id="@+id/et_contactPhone"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_toRightOf="@id/tv_contactPhone"
            android:textColor="#000"
            android:layout_marginLeft="20dp"
            android:background="@drawable/mv_loading_logo"/>


        <ImageView
            android:id="@+id/iv_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/plus"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请选择"
            android:layout_centerVertical="true"
            android:textSize="18sp"
            android:textColor="#c0c0c0"
            android:layout_toLeftOf="@id/iv_add"
            android:layout_marginRight="10dp"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_height="1px"
        android:background="#C0C5C7"/>

    <RelativeLayout
        android:id="@+id/city"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dip"
        android:background="#fff">

        <TextView
            android:id="@+id/tv_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="所在地区"
            android:textSize="20sp"
            android:textColor="#000"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"/>

        <EditText
            android:id="@+id/et_city"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_toRightOf="@id/tv_city"
            android:layout_marginLeft="10dp"
            android:textColor="#000"
            android:textSize="14sp"
            android:background="@drawable/mv_loading_logo"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_height="1px"
        android:background="#C0C5C7"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#fff">

       <EditText
           android:id="@+id/et_city_detail"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:hint="请输入地址 不少于5个字"
           android:textColor="#000"
           android:singleLine="false"
           android:textSize="14sp"
           android:gravity="left|top"
           android:background="@drawable/mv_loading_logo"
         />
    </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_height="1px"
            android:background="#C0C5C7"/>

    <RelativeLayout
        android:id="@+id/isdefault"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="#fff"
        android:padding="10dip">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设为默认"
            android:textSize="20sp"
            android:textColor="#000"
            />

       <CheckBox
           android:id="@+id/cb_isdefault"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignParentRight="true"
           android:layout_marginRight="10dp"
           android:background="@drawable/checkbox_check"/>


    </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_height="1px"
            android:background="#C0C5C7"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp">

        </RelativeLayout>
    </LinearLayout>
    </ScrollView>

</LinearLayout>
