<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_order"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eee"
    tools:context="com.first.yuliang.deal_community.Order">

    <include android:id="@+id/tl_order"
             layout="@layout/order_bar"/>
    <ScrollView
        android:id="@+id/sv_order"
        android:layout_below="@+id/tl_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/rl_address"
            android:orientation="vertical"
            android:background="@drawable/address"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_address"
                android:layout_margin="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="收货地址"
                android:textColor="#a000"
                android:textSize="14sp"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_height="30dp"
                android:drawableRight="@drawable/into"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="    更换地址"
                android:textSize="12sp"
                android:textColor="#3000"
                android:background="@android:color/transparent"
                android:layout_alignParentRight="true"/>
            <ImageView
                android:id="@+id/iv_address_line"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_below="@+id/tv_address"
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:background="#ccc"
                />
            <ImageView
                android:id="@+id/iv_local"
                android:layout_margin="25dp"
                android:layout_below="@+id/iv_address_line"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/map_address"/>
            <RelativeLayout
                android:orientation="vertical"
                android:layout_toRightOf="@+id/iv_local"
                android:layout_below="@+id/iv_address_line"
                android:layout_margin="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="收货人:"
                android:textSize="12sp"
                android:textColor="#a000"/>
            <TextView
                android:id="@+id/tv_user_name"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/tv_user"
                android:layout_alignBottom="@+id/tv_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="#a000"/>
            <TextView
                android:id="@+id/tv_address_1"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/tv_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="地址:"
                android:textSize="12sp"
                android:textColor="#a000"/>
            <TextView
                android:id="@+id/tv_address_2"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/tv_user_name"
                android:layout_toRightOf="@+id/tv_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="#a000"/>
            <TextView
                android:id="@+id/tv_phone1"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/tv_address_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="电话:"
                android:textSize="12sp"
                android:textColor="#a000"/>
            <TextView
                android:id="@+id/tv_phone2"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/tv_user"
                android:layout_below="@+id/tv_address_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="#a000"/>
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
        android:id="@+id/rl_commodity"
        android:layout_below="@+id/rl_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/background"
        android:padding="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        >
<LinearLayout
    android:id="@+id/ll_seller"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="2dp"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/iv_seller_head"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/deal_logo"/>
    <TextView
        android:id="@+id/iv_seller_name"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#a000"
        android:textSize="12sp"/>
</LinearLayout>
        <ImageView
            android:layout_below="@+id/ll_seller"
            android:id="@+id/iv_line_s"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:background="#ccc"/>
            <RelativeLayout
                android:layout_below="@+id/iv_line_s"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iv_cg_l"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/deal_logo"/>
                <TextView
                    android:id="@+id/tv_cg_l"
                    android:text="这是商品标题"
                    android:layout_toRightOf="@+id/iv_cg_l"
                    android:layout_alignTop="@+id/iv_cg_l"
                    android:layout_marginLeft="10dp"
                    android:textSize="12sp"
                    android:textColor="#a000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tv_rmb_l"
                    android:layout_toRightOf="@+id/iv_cg_l"
                    android:layout_alignBottom="@+id/iv_cg_l"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="5dp"
                    android:text="￥"
                    android:textSize="12sp"
                    android:textColor="#aaff0000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"/>
                <TextView
                    android:id="@+id/tv_price_l"
                    android:layout_toRightOf="@+id/tv_rmb_l"
                    android:layout_alignBottom="@+id/iv_cg_l"
                    android:layout_marginBottom="5dp"
                    android:textSize="14sp"
                    android:textColor="#aaff0000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"/>
                <TextView
                    android:id="@+id/tv_local_l"
                    android:layout_alignBottom="@+id/iv_cg_l"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_alignParentRight="true"
                    android:textSize="12sp"
                    android:textColor="#4000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"/>
        </RelativeLayout>
    </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            >
            <TextView
                android:layout_centerVertical="true"
                android:id="@+id/tv_post_way"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="配送方式:"
                android:textColor="#a000"
                android:textSize="14sp"/>
            <EditText
                android:id="@+id/et_post_way"
                android:layout_toRightOf="@+id/tv_post_way"
                android:layout_marginLeft="10dp"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background"
                android:hint="在这里填写您的配送要求"
                android:textColorHint="#3000"
                android:textSize="12sp"
                android:textColor="#a000"/>
        </RelativeLayout>

    </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#eee"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <ImageView
            android:id="@+id/iv_line_o"
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:background="#ccc"/>
        <RelativeLayout
            android:layout_below="@+id/iv_line_o"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_buy"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="49dp"
            android:text="立即购买"
            android:textSize="14sp"
            android:textColor="#fff"
            android:background="@color/main"/>
            <TextView
                android:id="@+id/tv_price_order"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@id/btn_buy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#af00"
                android:textSize="16sp"/>
            <TextView
                android:id="@+id/tv_rmb_o"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/tv_price_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥"
                android:textColor="#af00"
                android:textSize="14sp"/>
            <TextView
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@id/tv_rmb_o"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="需支付："
                android:textColor="#a000"
                android:textSize="14sp"/>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
