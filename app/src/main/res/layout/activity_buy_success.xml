<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_buy_success"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context="com.first.yuliang.deal_community.BuySuccessActivity">
    <include android:id="@+id/tl_result"
             layout="@layout/buy_success_bar"/>
    <ImageView
        android:id="@+id/iv_success"
        android:layout_below="@id/tl_result"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/field"/>
    <TextView
        android:id="@+id/tv_result"
        android:layout_margin="10dp"
        android:layout_below="@+id/iv_success"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="选择支付方式"
        android:textSize="16sp"
        android:textColor="#a000"/>
    <RadioGroup
        android:id="@+id/rg_zhifu"
        android:layout_below="@id/tv_result"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RadioButton
            android:id="@+id/rb_weixin"
            android:text="微信支付"
            android:layout_marginLeft="30dp"
            android:textColor="#a000"
            android:drawablePadding="20dp"
            android:paddingLeft="10dp"
            android:checked="true"
            android:drawableLeft="@drawable/weixin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_margin="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_height="0.2dp"
            android:background="#eee"/>
        <RadioButton
            android:id="@+id/rb_zhifubao"
            android:text="支付宝支付"
            android:layout_marginLeft="32dp"
            android:textColor="#a000"
            android:drawableLeft="@drawable/zhifubao"
            android:drawablePadding="20dp"
            android:paddingLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        </RadioGroup>
    <Button
        android:id="@+id/btn_zhifu"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/rg_zhifu"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:text="确认支付"
        android:textColor="#a000"
        android:background="@drawable/button_stroke"/>
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/ll_success"
        android:layout_below="@id/tv_result"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_result_return"
            android:layout_width="74dp"
            android:layout_height="30dp"
            android:text="返回商品  "
            android:drawableLeft="@drawable/backs"
            android:layout_marginRight="30dp"
            android:background="@drawable/button_stroke"
            android:textSize="12sp"
            android:textColor="#a000"/>
        <Button
            android:id="@+id/btn_result_into"
            android:layout_width="74dp"
            android:layout_height="30dp"
            android:text="  我买到的"
            android:drawableRight="@drawable/into"
            android:layout_marginLeft="30dp"
            android:background="@drawable/button_stroke"
            android:textSize="12sp"
            android:textColor="#a000"/>
    </LinearLayout>
</RelativeLayout>
