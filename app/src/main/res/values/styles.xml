<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="radiostyle" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <!-- Customize your theme here. -->
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">49dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#33d685</item>
        <item name="android:radius">25dp</item>
    </style>
    <style name="Comment" parent="android:TextAppearance">
        <item name="android:textSize">14dp</item>
    </style>

    <color name="bgcolor">#33d685</color>
</resources>
